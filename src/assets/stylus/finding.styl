.finding
  width 100%
  height 100%
  background-color $bodybgc
  .banner-container
    width 90%
    margin 10px auto
    border-radius 10px
    overflow hidden
  .menus
    width: 95%
    margin: 0 auto
    display flex
    flex-wrap wrap
    justify-content space-around
    .one-menu
      position relative
      width 30%
      border-radius 5px
      margin 5px 0
      // margin-top: 5px
      overflow hidden
      img
        width 100%
        border-radius 5px
      .one-name
        width 100%
        display inline-block
        color $fontColor
        font-size 10px
        line-height 16px
        overflow: hidden ;
        display: -webkit-box ;
        -webkit-line-clamp: 2 ;
        -webkit-box-orient: vertical;
        word-break: break-all ;
        height 30px
        margin-top 2px
  .river-title
    width 94%
    height 50px
    margin: 0 auto
    color $fontColor
    position relative
    border-top: 1px solid rgba(150,150,150,.2)
    span:first-child
      font-weight 900
      font-size 20px
      float left
      margin-left 5px
      line-height 50px
    span:last-child
      float right
      width: 60px
      text-align: center
      font-size 12px
      margin-right 5px
      border 1px solid rgba(150,150,150,.2)
      height 20px
      position: absolute
      top: 50%;
      margin-top: -10px
      right 5px
      line-height: 20px
      border-radius 10px
  .play-count
    position absolute
    right 5px
    text-shadow 2px 2px 2px black
    top 0
    text-align right
    font-size 10px
    height 20px
    line-height 20px
    .play-num
      margin-left 4px
      color white
  .list-container
    display flex
    justify-content space-around
    width 100%
    margin 15px 0
    .svg-container
      text-align center
    .list-text
      text-align center
      font-size 10px
      color $fontColor
  .pop-list-container
      width: 100%
      height 60%
      .my-name
        margin 30px 0
        padding-left: 10px
    .pop-list-menu-container
      width: 100%
      height 60%
      display flex
      flex-direction column
      justify-content space-around
    .pop-list-menu-container div
      padding: 0 15px
      width: 50%
      line-height: 300%
      background-color: yellow
      text-align: center
  .dishes-container
    display: flex
    flex-direction: row
    justify-content: space-around
    .one-dish
      width 30%
      border-radius 5px
      margin 5px 0
      overflow hidden
      .dash-name, .singer-name
        display: block
        font-size: 10px
        line-height: 15px
        color $fontColor
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
